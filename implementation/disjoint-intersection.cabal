name:                disjoint-intersection
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            http://github.com/githubuser/disjoint-intersection#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2016 Author Here
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
                     , src/Source
                     , src/Target
  exposed-modules:     Tokens
                       Env
                       Common
                       PrettyPrint
                       Translation
                       Source.Parser
                       Source.Syntax
                       Target.Syntax
                       Target.TypeCheck
  build-depends:       base >= 4.7 && < 5
                     , unbound-generics
                     , array
                     , text
                     , ansi-wl-pprint
                     , transformers
                     , mtl
  default-language:    Haskell2010
  build-tools:         alex
                     , happy

executable disjoint-intersection-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , disjoint-intersection
                     , haskeline
                     , text
  default-language:    Haskell2010

test-suite disjoint-intersection-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , disjoint-intersection
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/disjoint-intersection
